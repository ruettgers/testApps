<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.weg.wi1415.appnameT1.FolgeActivity" >

    <TextView
        android:id="@+id/AnredeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/button1"
        android:background="@drawable/red_button"
       	style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AnredeText"
        android:layout_below="@+id/AnredeText"
        android:layout_marginTop="70dp"
        android:onClick="goBack"
        android:text="@string/ButtonBack"
 />

    <Button
        android:id="@+id/button2"
        android:background="@drawable/red_button"
       	style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp"
        android:onClick="goForward"
        android:text="@string/ButtonForward" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button2"
        android:layout_below="@+id/button1"
        android:layout_toRightOf="@+id/AnredeText" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listeDerNamen"
                android:layout_width="216dp"
                android:layout_height="332dp"
                tools:listitem="@android:layout/simple_list_item_2" >
            </ListView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>